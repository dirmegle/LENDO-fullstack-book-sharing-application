{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "..",
    "baseUrl": ".",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "outDir": "./dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"],
      "@server/*": ["../server/src/*"]
    },
    "types": ["vite-plugin-svgr/client"]
  },
  "include": ["env.d.ts", "src/**/*", "../server/src/shared/**/*"],
  "exclude": ["src/**/tests/*", "node_modules", "dist"],
}
